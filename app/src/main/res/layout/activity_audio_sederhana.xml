<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioSederhanaActivity">

    <ImageButton
        android:id="@+id/imgbtn_play"
        android:layout_width="@dimen/height_btn_audio"
        android:layout_height="@dimen/height_btn_audio"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_button"
        android:src="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/imgbtn_stop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_button"
        android:layout_above="@id/imgbtn_play"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_stop_white_24dp" />

</RelativeLayout>