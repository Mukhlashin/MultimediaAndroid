<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:onClick="audio"/>

    <Button
        android:id="@+id/btn_audio_sederhana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="audioSederhana"
        android:text="Audio Sederhana"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
    android:id="@+id/btn_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:onClick="videoOffline"
    android:text="Video Offline"
    android:textAllCaps="false"
    android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_audio_streaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="audioStreaming"
        android:text="Audio Streaming"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_video_streaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="videoStreaming"
        android:text="Video Streaming"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</LinearLayout>